<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golden.owaranai" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.golden.owaranai.ApplicationController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.BitTweet" >
        <activity
            android:name="com.golden.owaranai.ui.TweetsListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.golden.owaranai.ui.TweetsDetailActivity"
            android:label="@string/title_tweets_detail"
            android:parentActivityName="com.golden.owaranai.ui.TweetsListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.golden.owaranai.TweetsListActivity" />
        </activity>
        <activity
            android:name="com.golden.owaranai.ui.TwitterLoginActivity"
            android:label="Log In to Twitter"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="t4jsample"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.golden.owaranai.ui.NewTweetActivity"
            android:label="@string/title_activity_new_tweet" >
        </activity>
    </application>

</manifest>
