<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:baselineAligned="false"
              android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/accent_container"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/retweet_accent"/>

    <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
                android:id="@+id/retweeted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/username"
                android:layout_alignStart="@id/username"
                android:visibility="gone"
                android:textSize="9sp"
                android:text="Retweeted by Person"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:id="@+id/displayname"
            android:layout_toRightOf="@+id/username"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 hours ago"
            android:id="@+id/time"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/tweet"
            android:layout_marginTop="5dp"
            android:textSize="9sp"
            android:textColor="#666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick red fox jumps over the lazy dog"
            android:id="@+id/tweet"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@id/retweeted_by"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>